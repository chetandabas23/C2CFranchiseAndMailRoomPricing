<aura:component controller="recordtypeController" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader" access="global">
    <aura:attribute name="recordId" type="ID"/>
    <aura:attribute name="simpleRecord" type="Account" />
    <aura:attribute name="record" type="Account" />
    <aura:attribute name="recordError" type="String" />
    
    <aura:handler name="init" value="{!this}" action="{!c.fetchListOfRecordTypes}"/>
    
    <aura:attribute name="lstOfRecordType" type="String[]" />
    <aura:attribute name="isOpen" type="boolean" default="false" />
    
    <force:recordData aura:id="recordEditor"
                      layoutType="FULL"
                      recordId="{!v.recordId}"
                      targetError="{!v.recordError}"
                      targetRecord="{!v.record}"
                      targetFields ="{!v.simpleRecord}"
                      mode="EDIT" />
    
    <div class="slds-modal__header">
        <h2 id="header43" class="slds-text-heading--medium">New Service For <b>{!v.simpleRecord.Registered_Name__c}</b></h2>
    </div>
    
    <br/>
   
    <br/>
    <div class="slds-grid slds-wrap">
        
        <div class="slds-size--1-of-2 slds-large-size--1-of-2">
            <div class="slds-align--absolute-center">Select a Service Type</div>                            
        </div>
        <div class="slds-size--1-of-2 slds-large-size--1-of-2">
            <ui:inputSelect aura:id="selectid">
                <aura:iteration items="{!v.lstOfRecordType}" var="recordType">                            
                    <ui:inputSelectOption text="{!recordType}" label="{!recordType}"  />
                </aura:iteration>
            </ui:inputSelect>
        </div>&nbsp; &nbsp;
    </div>                   
    
    <div class="slds-float_right">
        <lightning:button class="slds-button slds-button--brand" onclick="{!c.createRecord}">Next</lightning:button>
    </div>
    
</aura:component>